<div class="flex justify-center items-center h-full">

    <%= form_with model: @track, url: tracks_path, method: :post, html: { class: 'w-full max-w-md p-4 bg-white' } do |form| %>
  
    <h1 class="text-2xl mb-4">Add a Track</h1>


      <div class="mb-4">
        <%= form.label :track_name %>
        <%= form.text_field :track_name, class: 'w-full border p-2 rounded' %>
      </div>

        <div class="mb-4">
            <%= form.label :track_type %>
            <%= form.text_field :track_type, class: 'w-full border p-2 rounded' %>
        </div>

        <div class="mb-4">
            <%= form.label :track_description %>
            <%= form.text_field :track_description, class: 'w-full border p-2 rounded' %>
        </div>

        <div class="mb-4">
            <%= form.label :track_times_of_day %>
            <%= form.collection_select :track_times_of_day, Track.times_of_day_options, :to_s, :to_s, {}, { multiple: true, size: 5 } %>
        </div>

        <div class="mb-4">
            <%= form.label :track_pack %>
            <%= form.text_field :track_pack, class: 'w-full border p-2 rounded' %>
        </div>

        <div class="mb-4">
            <%= form.label :track_image_uri %>
            <%= form.text_field :track_image_uri, class: 'w-full border p-2 rounded' %>
        </div>

        <div class="mb-4">
            <%= form.label :track_map_uri %>
            <%= form.text_field :track_map_uri, class: 'w-full border p-2 rounded' %>
        </div>

        <div class="mb-4">
            <%= form.label :track_video_preview_uri %>
            <%= form.text_field :track_video_preview_uri, class: 'w-full border p-2 rounded' %>
        </div>

        <div class="mb-4">
            <%= form.label :track_weather_conditions %>
            <%= form.collection_select :track_weather_conditions, Track.weather_conditions_options, :to_s, :to_s, {}, { multiple: true, size: 5 } %>
        </div>
  
      <!-- Add other fields as needed -->
  
      <div class="text-center">
        <%= form.submit 'Add Track', class: 'bg-blue-500 text-white py-2 px-4 rounded' %>
      </div>
    <% end %>
  </div>
  