<!-- app/views/users/edit.html.erb -->

<%= render 'users/userbreadcrumbs' %>

<div class="flex items-center justify-center pt-8">
    <div class="p-8 bg-white shadow-lg rounded-md outline outline-1 outline-gray-300">
        <h1 class="text-2xl font-bold underline text-gray-700 text-center pb-4">Edit Your Profile</h1>

        <%= form_with model: @user, url: user_path, class: "w-2xl" do |form| %>

            <% if form.object.errors.any? %>
                <% form.object.errors.full_messages.each do |message| %>
                    <div><%= message %></div>
                <% end %>
            <% end %>

            <div class="mb-4 w-full">
                <%= form.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
                <%= form.email_field :email, class: 'w-full border p-2 rounded' %>    
            </div>

            <div class="mb-4 w-full">
                <%= form.label :gamer_tag, class: 'block text-gray-700 text-sm font-bold mb-2' %>
                <%= form.text_field :gamer_tag, class: 'w-full border p-2 rounded' %>    
            </div>

            <div class="mb-4 w-full">
            <%= form.label :roles, class: 'block text-gray-700 text-sm font-bold mb-2' %>

            <%= form.check_box :roles, { multiple: true }, 'member', nil %>
            <%= form.label :roles, 'Member' %>

            <%= form.check_box :roles, { multiple: true }, 'owner', nil %>
            <%= form.label :roles, 'Owner' %>

            <%= form.check_box :roles, { multiple: true }, 'manager', nil %>
            <%= form.label :roles, 'Manager' %>

            <%= form.check_box :roles, { multiple: true }, 'admin', nil %>
            <%= form.label :roles, 'Admin' %>
            </div>



            <div class="py-2">
                <%= form.submit "Update Profile", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
            </div>

            <div class="py-2">
                <%= link_to "Cancel", user_path, class: "text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" %>
            </div>

            <div class="py-2">
                <%= link_to "Delete Profile", user_path, method: :delete, data: { confirm: "Are you sure?" }, class: "text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" %>
            </div>

            <div class="py-2">
                <%= link_to "Change Password", edit_password_path, class: "text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" %>
            </div>
        <% end %>
    </div>
</div>
