<!-- app/views/tournaments/new.html.erb -->


<div class="flex items-center justify-center pt-8">
  <div class="p-8 bg-white shadow-lg rounded-md w-full sm:w-1/2 outline outline-1 outline-gray-300">
    <h1 class="text-2xl font-bold underline text-gray-700 text-center pb-4">Add Tournament</h1>

    <%= form_with model: @tournament, url: tournaments_path, class: '2-2xl' do |form| %>

      <div class="mb-4">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'w-full border p-2 rounded' %>
      </div>

      <div class="mb-4">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'w-full border p-2 rounded' %>
      </div>

      <div class="mb-4">
        <%= form.label :number_of_rounds %>
        <%= form.number_field :number_of_rounds, class: 'w-full border p-2 rounded' %>
      </div>

      <div class="mb-4">
        <%= form.label :start_date %>
        <%= form.datetime_field :start_date, class: 'w-full border p-2 rounded' %>
      </div>

      <div class="text-center">
        <%= form.submit 'Add Tournament', class: 'bg-blue-500 text-white py-2 px-4 rounded' %>
      </div>
    <% end %>

  </div>
</div>
